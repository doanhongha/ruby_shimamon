<%= form_with scope: :comment, url: "/tasks/create", local: true do |form| %>
  
  <div class="form-group">
    <%= form.text_field :content, id: :post_title, class: "form-control", :required => true %>
  </div>

  <div class="field hidden">
    <%= form.number_field :id_post, :value => @post.id, id: :comment_post_id %>
  </div>
<div class="field">
    <%= form.label :tag %>
    <%= form.collection_select :tag, Tag.order(:name),:id,:name, include_blank: true %>
  </div>
  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>